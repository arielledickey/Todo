<p id="notice"><%= notice %></p>
<div class= "container">

<h1>Listing Todo Items</h1>



<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<table class= "table table-condensed">

  <thead>
    <tr>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_items.each do |todo_item| %>
      <tr>
        <td><%= todo_item.description %></td>
        <td><%= link_to 'Show', todo_item, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_todo_item_path(todo_item), class: "btn btn-info" %></td>
        <td><%= link_to 'Destroy', todo_item, class: "btn btn-info", method: :delete, data: { confirm: 'Are you sure?' } %></td>
       <!--  <td><a class="btn btn-info" href= "todo_item">show</a></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo item', new_todo_item_path, class: "btn btn-info" %>
</div>